@model Internet_1.Models.CustomUser

<h2>Kullanıcı Oluştur</h2>

<form asp-action="CreateUser">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="UserName" name="UserName" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="PasswordHash">Şifre</label>
        <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" required />
    </div>

    <div class="form-group">
        <label for="Rol">Role</label>
        <select class="form-control" id="Rol" name="Rol">
            <option value="User">User</option>
            <option value="Eğitmen">Eğitmen</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create User</button>
</form>
